<%= form_with url: conversions_path, local: true, method: :get do |f| %>
  <%= f.label :base_currency do %>
    Base currency:
    <%= f.select :base_currency, options_for_select(currencies) %>
  <% end %>
  <%= f.label :target_currency do %>
    Target currency:
    <%= f.select :target_currency, options_for_select(currencies) %>
  <% end %>
  <%= f.label :amount do %>
    Amount:
    <%= f.text_field :amount, value: conversion[:amount] %>
  <% end %>
  <%= f.label :max_wait do %>
    Max wait time:
    <%= f.select :max_wait, options_for_select(wait_times) %>
  <% end %>
  <%= f.submit 'Calculate' %>
<% end %>

<% if predictions.present? %>
  <%= render partial: 'prediction_list', locals: {predictions: predictions} %>
<% end %>
